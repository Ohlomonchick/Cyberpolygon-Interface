[Unit]
Description=Cyberpolygon-appscheduler
After=network.target

[Service]
User={{ user }}
WorkingDirectory={{ workdir }}
ExecStart={{ scheduler_script }}
Restart=always
StandardOutput=append:{{ log_dir }}/cyberpolygon_scheduler.log
StandardError=append:{{ log_dir }}/cyberpolygon_scheduler.log

[Install]
WantedBy=multi-user.target